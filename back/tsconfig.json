{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDirs": ["./"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@db/*": ["./src/db/*"],
            "@types/*": ["./src/types/*"],
            "@routes/*": ["./src/api/routes/*"],
            "@controllers/*": ["./src/api/controllers/*"]
        }
    }
}
